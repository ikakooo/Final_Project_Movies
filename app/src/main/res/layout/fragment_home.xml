<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".bottom_navigation.home.HomeFragment">
    <include layout="@layout/toolbar_layout" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ProgressBar
        android:id="@+id/progressBarID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#00FFFFFF"
        android:scaleX="0.40"
        android:scaleY="0.40"
        android:textColor="@color/colorAccent"
        android:visibility="visible" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingStart="12sp"
                tools:ignore="RtlSymmetry">


                <TextView

                    android:id="@+id/text_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/top_today"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />


                <ImageView

                    android:id="@+id/AllTopTodayButtonID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/ic_arrow"
                    android:paddingEnd="20sp"
                    android:layout_gravity="end"
                    android:textColor="@android:color/darker_gray"
                    android:contentDescription="@string/todo" />
            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/topTodayRecyclerView"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

            </androidx.recyclerview.widget.RecyclerView>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12sp"
                tools:ignore="RtlSymmetry">


                <TextView

                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/popular"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <ImageView

                    android:id="@+id/AllPopularButtonID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/ic_arrow"
                    android:paddingEnd="20sp"
                    android:layout_gravity="end"
                    android:textColor="@android:color/darker_gray"
                    android:contentDescription="@string/todo" />
            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/popularRecyclerView"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

            </androidx.recyclerview.widget.RecyclerView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12sp"
                tools:ignore="RtlSymmetry">


                <TextView

                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/top_rated"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <ImageView

                    android:id="@+id/AllTopRatedButtonID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/ic_arrow"
                    android:paddingEnd="20sp"
                    android:layout_gravity="end"
                    android:textColor="@android:color/darker_gray"
                    android:contentDescription="@string/todo" />
            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/topRatedRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

            </androidx.recyclerview.widget.RecyclerView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12sp"
                tools:ignore="RtlSymmetry">


                <TextView

                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/upcoming"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <ImageView

                    android:id="@+id/AllUpComingButtonID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/ic_arrow"
                    android:paddingEnd="20sp"
                    android:layout_gravity="end"
                    android:textColor="@android:color/darker_gray"
                    android:contentDescription="@string/todo" />
            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/upcomingRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    </FrameLayout>

</LinearLayout>