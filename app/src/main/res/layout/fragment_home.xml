<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".bottom_navigation.ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:paddingStart="12sp"
                tools:ignore="RtlSymmetry">


                <TextView

                    android:id="@+id/text_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/top_today"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView

                    android:id="@+id/text00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:drawableEnd="@mipmap/baseline_arrow_forward_black_24"
                    android:fontFamily="sans-serif-black"
                    android:paddingEnd="20sp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="20sp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/topTodayRecyclerView"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

            </androidx.recyclerview.widget.RecyclerView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:paddingStart="12sp"
                tools:ignore="RtlSymmetry">


                <TextView

                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/popular"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView

                    android:id="@+id/text10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:drawableEnd="@mipmap/baseline_arrow_forward_black_24"
                    android:fontFamily="sans-serif-black"
                    android:paddingEnd="20sp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="20sp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/popularRecyclerView"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:paddingStart="12sp"
                tools:ignore="RtlSymmetry">


                <TextView

                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/top_rated"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView

                    android:id="@+id/text20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:drawableEnd="@mipmap/baseline_arrow_forward_black_24"
                    android:fontFamily="sans-serif-black"
                    android:paddingEnd="20sp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="20sp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rView2"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:paddingStart="12sp"
                tools:ignore="RtlSymmetry">


                <TextView

                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="10sp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/upcoming"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView

                    android:id="@+id/text30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:drawableEnd="@mipmap/baseline_arrow_forward_black_24"
                    android:fontFamily="sans-serif-black"
                    android:paddingEnd="20sp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="20sp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rView3"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </ScrollView>





</LinearLayout>